bazel_dep(
    name = "googleapis",
    version = "0.1.0-rc1",
)

googleapis = use_extension("@googleapis//extensions:googleapis.bzl", "googleapis")
use_repo(googleapis, "com_google_googleapis")

repo_targets = use_extension("@googleapis//extensions:repo_targets.bzl", "repo_targets")
use_repo(repo_targets, "com_google_googleapis_imports")

non_module_deps = use_extension(
    "//build/extensions:non_module_deps.bzl",
    "non_module_deps",
)
non_module_deps.tink_java_version(
    sha256 = "cff458ea60897f7a5edc91d1eb9c58c650c2fd3206d94672f29c950b94398a49",
    version = TINK_VERSION,
)
use_repo(
    non_module_deps,
    "cloud_spanner_emulator",
    "com_google_highwayhash",
    "io_grpc_grpc_proto",
    "tink_java_src",
)
