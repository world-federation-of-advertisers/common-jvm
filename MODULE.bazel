oci.pull(
    name = "java_image_base",
    digest = "sha256:241064293d5477b6b91fb75abc923023a5fde11740a8ef56f54666579f8fef42",
    image = "gcr.io/distroless/java11-debian11",
)
use_repo(
    oci,
    "java_image_base",
